<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:vm="clr-namespace:TheLambClub.ViewModel"
               xmlns:m="clr-namespace:TheLambClub.Models"
               x:Class="TheLambClub.Views.PickYourMovePopupPage"
               x:DataType="vm:PickYourMovePromptPageVM"
                 CanBeDismissedByTappingOutsideOfPopup="False">
    <Grid ColumnDefinitions="auto,auto,auto,auto" RowDefinitions="*,*">
        <Button 
            Grid.RowSpan="2"
        BackgroundColor="DarkBlue"
        Command="{Binding Stay}"
        CornerRadius="15"
        Text="{Binding CheckOrFold}" 
        TextColor="White" />
        <Button 
          Grid.RowSpan="2"
        BackgroundColor="DarkBlue"
             Grid.Column="1"
        Command="{Binding Fold}"
        CornerRadius="15"
        Text="{x:Static m:Strings.FoldBtnTxt}" 
        TextColor="White" />
        <!--<VerticalStackLayout Grid.Column="2" Grid.RowSpan="2">
            <Label Text="{Binding BetAmountStr}"
             FontSize="20"
                 Grid.Column="2"
                 Grid.Row="1"
             HorizontalOptions="Center" />
                    <Slider  Grid.Column="2" BackgroundColor="Black" Minimum="10" Maximum="1000" Value="{Binding BetAmount}" />
                    <Button Text="{x:Static m:Strings.SubmitBetBtn }" Grid.Column="4" Grid.Row="2"
              Command="{Binding SubmitBetCommand}" />-->
        <!--</VerticalStackLayout>-->
        <Border BackgroundColor="Black"
         Grid.Column="3"
        Grid.RowSpan="2">
            <Label 
       BackgroundColor="White"     
        Text="{Binding TimeLeft}"
        x:Name="TimeLeft"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        FontSize="20"/>
        </Border>
    </Grid>
</toolkit:Popup>