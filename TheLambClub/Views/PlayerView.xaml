<ContentView
    x:Class="TheLambClub.Views.PlayerView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
     x:DataType="vm:PlayerVM">

    <Frame
        Padding="10"
        CornerRadius="12"
        BackgroundColor="#eeeeee"
        HasShadow="True"
        Margin="5"
        WidthRequest="120"
     HeightRequest="120">
        
        <VerticalStackLayout Spacing="4">
            <Label 
                Text="{Binding Name}"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="20" />
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto"
      Margin="10"
      HeightRequest="150">
                <ImageButton 
        WidthRequest="120"
        HeightRequest="120"
        Margin="10"
        Padding="0"
        Aspect="AspectFit"
        HorizontalOptions="Center"
        VerticalOptions="Center" 
        Source="{Binding card1}" />
                <ImageButton 
        Grid.Column="1"
        WidthRequest="120"
        HeightRequest="120"
        Margin="10"
        Padding="0"
        Aspect="AspectFit"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Source="{Binding card2}" />
            </Grid>
        </VerticalStackLayout>

    </Frame>
</ContentView>
