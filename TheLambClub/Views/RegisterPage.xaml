<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    Title="RegisterPage"
    x:DataType="vm:RegisterPageVM"
      BackgroundColor="Black">
    <Grid
        Margin="5"
        ColumnDefinitions="2*,3*,*"
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
        RowSpacing="50">
        <Label
            Grid.Column="1"
            FontSize="40"
            Text="{x:Static m:Strings.Register}"
            TextColor="Red" />
        <Label
            Grid.Row="1"
            Text="{x:Static m:Strings.EnterUserName}"/>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            BackgroundColor="#99FFFFFF"
            Stroke="Red"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1">
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Placeholder="{x:Static m:Strings.UserName}"
                Text="{Binding UserName}" />
        </Border>
        <Label
            Grid.Row="2"
            Text="{x:Static m:Strings.EnterPassword}"/>
        <Border
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2">
            <Entry
                IsPassword="{Binding IsPassword}"
                Placeholder="{x:Static m:Strings.Password}"
                Text="{Binding Password}" />
        </Border>
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BackgroundColor="Transparent"
            BorderWidth="0"
            Command="{Binding ToggleIsPasswordCommand}"
            FontFamily="MaterialSymbols"
            FontSize="24"
            HorizontalOptions="End"
            Style="{StaticResource IconButtonStyle}"
            Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
            TextColor="Red"
            VerticalOptions="Center" />
        <Label
            Grid.Row="3"
            Text="{x:Static m:Strings.EnterEmail}" />
        <Border
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2">
            <Entry
                Placeholder="{x:Static m:Strings.Email}"
                Text="{Binding Email}" />
        </Border>
        <Label
            Grid.Row="4"
            Text="{x:Static m:Strings.EnterAge}" />
        <Border
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            BackgroundColor="#99FFFFFF"
            Stroke="Red"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1">
            <Entry
                Placeholder="{x:Static m:Strings.Age}"
                Text="{Binding Age}" />
        </Border>
        <Button
            Grid.Row="5"
            Grid.ColumnSpan="3"
            Background="Red"
            Command="{Binding RegisterCommand}"
            Text="{x:Static m:Strings.Register}"
            TextColor="white" />
    </Grid>
</ContentPage>