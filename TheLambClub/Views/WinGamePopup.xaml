<toolkit:Popup
    x:Class="TheLambClub.Views.WinGamePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    x:DataType="vm:WinGamePopupVM">
    <VerticalStackLayout
        Padding="30"
        BackgroundColor="White"
        Spacing="20"
        WidthRequest="300">
        <Label
            FontAttributes="Bold"
            FontSize="28"
            HorizontalOptions="Center"
            Text="You Won"
            TextColor="Black" />
        <Label
            FontSize="18"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="{Binding ResultMessage}"
            TextColor="Black" />
    </VerticalStackLayout>
</toolkit:Popup>