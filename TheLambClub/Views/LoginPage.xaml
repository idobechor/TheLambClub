<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.NewFolder.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    Title="LoginPage"
    x:DataType="vm:LoginPageVM"
    BackgroundColor="Black">
    <Grid
        Margin="5"
        ColumnDefinitions="2*,3*,*"
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
        RowSpacing="50">
        <Label
            FontSize="40"
            Grid.Column="1"
            Text="{x:Static m:Strings.LoginText}"
            TextColor="Red" />
        <Label
            Grid.Row="1"
            FontSize="24"
            Text="{x:Static m:Strings.EnterUserName}"
            TextColor="white" />
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            BackgroundColor="#99FFFFFF"
            Stroke="Red"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1">
            <Entry
                FontSize="24"
                Placeholder="{x:Static m:Strings.UserName}"
                Text="{Binding UserName}"
                TextColor="Red" />
        </Border>
        <Label
            Grid.Row="2"
            FontSize="24"
            Text="{x:Static m:Strings.EnterPassword}"
            TextColor="white" />
        <Border
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            Padding="10"
            BackgroundColor="#99FFFFFF"
            Stroke="Red"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1">
            <Entry
                FontSize="24"
                IsPassword="{Binding IsPassword}"
                Placeholder="{x:Static m:Strings.Password}"
                Text="{Binding Password}"
                TextColor="Red"/>
        </Border>
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BackgroundColor="Transparent"
            BorderWidth="0"
            Command="{Binding ToggleIsPasswordCommand}"
            FontFamily="MaterialSymbols"
            FontSize="24"
            HorizontalOptions="End"
            Style="{StaticResource IconButtonStyle}"
            Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
            TextColor="Red"
            VerticalOptions="Center" />
        <Label
            Grid.Row="3"
            FontSize="24"
            Text="{x:Static m:Strings.EnterEmail}"
            TextColor="white" />
        <Border
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            BackgroundColor="#99FFFFFF"
            Stroke="Red"
            StrokeShape="RoundRectangle 10"
            StrokeThickness="1">
            <Entry
                FontSize="24"
                Placeholder="{x:Static m:Strings.Email}"
                Text="{Binding Email}"
                TextColor="Red" />
        </Border>
        <Label
            Grid.Row="4"
            Grid.Column="1"
            FontSize="24"
            Text="Remember me:"
            TextColor="Red" />
        <CheckBox
            Grid.Row="4"
            Grid.Column="2"
            IsChecked="{Binding IsChecked}" />
        <Button
            Grid.Row="5"
            Grid.ColumnSpan="3"
            Background="Red"
            Command="{Binding LoginCommand}"
            Text="{x:Static m:Strings.LoginText}" />
    </Grid>
</ContentPage>