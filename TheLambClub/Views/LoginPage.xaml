<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.NewFolder.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    Title="LoginPage"
    BackgroundImageSource="registerbackgroundpage.png"
    x:DataType="vm:LoginPageVM">
    <Grid Margin="5" RowSpacing="50" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="2*,3*,*">
        <Label TextColor="Red"  FontSize="30" HorizontalOptions="Center" Text="{x:Static m:Strings.LoginText}" />
        <Label FontSize="24" Grid.Row="1" Text="{x:Static m:Strings.EnterUserName}" TextColor="white"/>
        <Entry FontSize="24" TextColor="white" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
       Placeholder="{x:Static m:Strings.UserName}"
       Text="{Binding UserName}" />
        <Label FontSize="24" Grid.Row="2" Text="{x:Static m:Strings.EnterPassword}" TextColor="white"/>
        <Entry FontSize="24" Grid.Row="2" Grid.Column="1" TextColor="white"
       Placeholder="{x:Static m:Strings.Password}"
       Text="{Binding Password}"
       IsPassword="{Binding IsPassword}"/>
        <Button
    BackgroundColor="Transparent"
    BorderWidth="0"
    Grid.Row="2"
    Grid.Column="2"   
    Command="{Binding ToggleIsPasswordCommand}"
    FontFamily="MaterialSymbols"
    FontSize="24"
    Style="{StaticResource IconButtonStyle}"
    HorizontalOptions="End"
    Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
    TextColor="Red"
    VerticalOptions="Center" />
        <Label FontSize="24" Grid.Row="3" Text="{x:Static m:Strings.EnterEmail}" TextColor="white"/>
        <Entry FontSize="24" TextColor="white" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
       Placeholder="{x:Static m:Strings.Email}"
       Text="{Binding Email}" />
        <Button Grid.Row="4" Grid.ColumnSpan="2"
        Command="{Binding LoginCommand}"
        Text="{x:Static m:Strings.LoginText}" />
        <Label  FontSize="24"  Grid.Row="5" Grid.Column="1" Text="Remember me:" TextColor="White"/>
        <CheckBox Grid.Row="5" Grid.Column="2" IsChecked="{Binding IsChecked}"/>
    </Grid>
</ContentPage>