<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheLambClub.Views.PickRegisterOrLoginPage"
              xmlns:vm="clr-namespace:TheLambClub.ViewModel"
             xmlns:m="clr-namespace:TheLambClub.Models"
             Title="PickRegisterOrLoginPage"
             x:DataType="vm:PickRegisterOrLoginPageVM"
             BackgroundColor="Gray">
    <StackLayout 
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">

        <Button 
            Command="{Binding LoginCommand}"
            Text="{x:Static m:Strings.LoginText}"
            BackgroundColor="DarkOrange"
             WidthRequest="200"
           HeightRequest="70"/>

        <Button
            Command="{Binding RegisterCommand}"
            Text="{x:Static m:Strings.Register}"
            BackgroundColor="Blue"
             WidthRequest="200"
         HeightRequest="70"/>

    </StackLayout>
</ContentPage>