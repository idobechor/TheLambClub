<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:views="clr-namespace:TheLambClub.Views"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <StackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{Binding MyName}"
            TextColor="Red" />
        <Grid ColumnDefinitions="*,*" RowDefinitions="auto,auto">
            <Label Text="{Binding player1Name}" TextColor="Black" />
            <ImageButton
                Grid.Row="1"
                Margin="5"
                Padding="0"
                Aspect="AspectFit"
                BackgroundColor="Transparent"
                BorderWidth="0"
                HeightRequest="120"
                Source="{Binding player1Card1}"
                WidthRequest="80" />

            <ImageButton
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Padding="0"
                Aspect="AspectFit"
                BackgroundColor="Transparent"
                BorderWidth="0"
                HeightRequest="120"
                Source="{Binding player1Card2}"
                WidthRequest="80" />
        </Grid>
        <Grid ColumnDefinitions="*,*" RowDefinitions="auto,auto">
            <Label Text="{Binding player2Name}" TextColor="Black" />
            <ImageButton
                Grid.Row="1"
                Margin="5"
                Padding="0"
                Aspect="AspectFit"
                BackgroundColor="Transparent"
                BorderWidth="0"
                HeightRequest="120"
                Source="{Binding player2Card1}"
                WidthRequest="80" />

            <ImageButton
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Padding="0"
                Aspect="AspectFit"
                BackgroundColor="Transparent"
                BorderWidth="0"
                HeightRequest="120"
                Source="{Binding player2Card2}"
                WidthRequest="80" />
        </Grid>
    </StackLayout>
</ContentPage>