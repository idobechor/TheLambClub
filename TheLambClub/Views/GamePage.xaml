<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:views="clr-namespace:TheLambClub.Views"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <AbsoluteLayout x:Name="RootLayout">
        <Label
      HorizontalOptions="Center"
      Text="{Binding MyName}"
      TextColor="Red" />
        <views:PlayerView Player="{Binding Player1}"  />
        <views:PlayerView Player="{Binding Player2}"  />
    </AbsoluteLayout>
</ContentPage>