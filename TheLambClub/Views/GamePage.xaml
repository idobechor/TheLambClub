<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:views="clr-namespace:TheLambClub.Views"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <AbsoluteLayout x:Name="RootLayout">
        <Label
      HorizontalOptions="Center"
      Text="{Binding MyName}"
      TextColor="Red" />

        <Frame
     x:Name="Table"
     AbsoluteLayout.LayoutBounds="0.5,0.45,300,160"
     AbsoluteLayout.LayoutFlags="PositionProportional"
     BackgroundColor="DarkGreen"
     CornerRadius="100"
     HeightRequest="160"
     WidthRequest="300"  
    
     />
        <AbsoluteLayout x:Name="PlayersLayout" BindableLayout.ItemsSource="{Binding Players}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="m:PlayerModel">
                    <VerticalStackLayout>
                        <Label
                            HorizontalOptions="Center"
                            Text="{Binding Name}"
                            TextColor="black"
                            VerticalOptions="Center" />
                        <ImageButton
                      WidthRequest="100"
                      HeightRequest="100"
                      Margin="0,10,0,10"
                      BackgroundColor="Transparent"
                      Padding="0"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      Aspect="AspectFit"
                      Source="{Binding card1.Source}" />
                        <ImageButton
                      WidthRequest="100"
                      HeightRequest="100"
                      Margin="0,10,0,10"
                      BackgroundColor="Transparent"
                      Padding="0"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      Aspect="AspectFit"
                      Source="{Binding card2.Source}" />
                        </VerticalStackLayout>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </AbsoluteLayout>
        <!--<Grid ColumnDefinitions="auto,auto">
        <views:PlayerView Player="{Binding Player1}" Grid.Column="1" />
        <views:PlayerView Player="{Binding Player2}" />
        </Grid>-->
    </AbsoluteLayout>
   
</ContentPage>