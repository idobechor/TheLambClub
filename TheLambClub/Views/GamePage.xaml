<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    xmlns:views="clr-namespace:TheLambClub.Views"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <VerticalStackLayout>
        <Label
      HorizontalOptions="Center"
      Text="{Binding MyName}"
      TextColor="Red" />

        <Grid ColumnDefinitions="*,*,*,*,*" >
                    <ImageButton
            WidthRequest="100"
            HeightRequest="100"
            Margin="0,10,0,10"
            BackgroundColor="Transparent"
            Padding="0"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Aspect="AspectFit"
            Source="{Binding boardCard1}" />
                    <ImageButton
                 Grid.Column="1"
           WidthRequest="100"
           HeightRequest="100"
           Margin="0,10,0,10"
           BackgroundColor="Transparent"
           Padding="0"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           Aspect="AspectFit"
           Source="{Binding boardCard2}" />
                    <ImageButton
                 Grid.Column="2"
           WidthRequest="100"
           HeightRequest="100"
           Margin="0,10,0,10"
           BackgroundColor="Transparent"
           Padding="0"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           Aspect="AspectFit"
           Source="{Binding boardCard3}" />
                    <ImageButton
                    Grid.Column="3"
          WidthRequest="100"
          HeightRequest="100"
          Margin="0,10,0,10"
          BackgroundColor="Transparent"
          Padding="0"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          Aspect="AspectFit"
          Source="{Binding boardCard4}" />
                <ImageButton
                    Grid.Column="4"
          WidthRequest="100"
          HeightRequest="100"
          Margin="0,10,0,10"
          BackgroundColor="Transparent"
          Padding="0"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          Aspect="AspectFit"
          Source="{Binding boardCard5}" />
        </Grid>
        <views:PlayerView Player="{Binding Player1}" />
    </VerticalStackLayout>
</ContentPage>