<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:views="clr-namespace:TheLambClub.Views"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <StackLayout>
        <CollectionView ItemsSource="{Binding OtherPlayers}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:PlayerView Player="{Binding}" HeightRequest="250" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Frame
        BackgroundColor="DarkGreen"
        CornerRadius="100"
   
        HeightRequest="160"
        WidthRequest="300" />

        <views:PlayerView
        Player="{Binding CurrentPlayer}"
        HeightRequest="150"/>

    </StackLayout>
</ContentPage>