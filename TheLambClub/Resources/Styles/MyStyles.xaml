<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="MyButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="30" />
    </Style>
    <Style
        x:Key="MySpButtonStyle"
        BasedOn="{StaticResource MyButtonStyle}"
        TargetType="Button">
        <Setter Property="BorderColor" Value="Magenta" />
        <Setter Property="BorderWidth" Value="5" />
    </Style>
    <Style TargetType="Frame">
        <Setter Property="CornerRadius" Value="55" />
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="WidthRequest" Value="110" />
        <Setter Property="HeightRequest" Value="110" />
        <Setter Property="Margin" Value="10" />
    </Style>
    <Style TargetType="BoxView">
        <Setter Property="CornerRadius" Value="50" />
        <Setter Property="WidthRequest" Value="100" />
        <Setter Property="HeightRequest" Value="100" />
    </Style>
    <Style x:Key="baseButton" TargetType="Button">
        <Setter Property="BorderWidth" Value="3" />
        <Setter Property="BorderColor" Value="Green" />
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style
    x:Key="IconButtonStyle"
    BasedOn="{StaticResource baseButton}"
    TargetType="Button">
        <Setter Property="BorderColor" Value="{AppThemeBinding Dark=White, Light=Black}" />
    </Style>
</ResourceDictionary>