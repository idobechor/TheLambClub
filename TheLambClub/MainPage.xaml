<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    Title="MainPage"
    x:DataType="vm:MainPageVM"
    BackgroundColor="Black"
    IsBusy="{Binding IsBusy}" >
    <Border Margin="40" Background="Gray">
        <StackLayout>
            <Grid ColumnDefinitions="auto,auto,4*,auto" RowDefinitions="auto,auto">
                <Label Text="{x:Static m:Strings.TheLambClub}" TextColor="Orange" />
                <Button
                    Grid.Column="1"
                    Background="Gray"
                    Command="{Binding InstructionsCommand}"
                    FontFamily="MaterialSymbols"
                    Text="{StaticResource IconDeveloper_guide}"
                    TextColor="Blue" />
                <Label
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Margin="0,60,0,0"
                    FontAttributes="Bold"
                    FontSize="35"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="{Binding UserName, StringFormat={x:Static m:Strings.WelcomeTxt}}"
                    TextColor="Orange" />
            </Grid>
            <Button
                Background="Red"
                Command="{Binding AddGameCommand}"
                Text="{x:Static m:Strings.CreateGameButtonTxt}"
                TextColor="black" />
            <Picker
                Title="{x:Static m:Strings.PickerTitle}"
                FontSize="20"
                Grid.Column="1"
                HorizontalTextAlignment="Center"
                ItemDisplayBinding="{Binding DisplayName}"
                ItemsSource="{Binding NumberOfPlayersList}"
                SelectedItem="{Binding SelectedNumberOfPlayers}" />
            
            <ListView ItemsSource="{Binding GamesList}" SelectedItem="{Binding SelectedItem}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="m:GameModel">
                        <ViewCell>
                            <Grid ColumnDefinitions="*,2*,0.5*">
                                <Label
                                Grid.Column="0"
                                Margin="20,0,0,0"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalTextAlignment="Start"
                                Text="{Binding HostName}" />
                                <Label
                                Grid.Column="1"
                                FontSize="20"
                                Text="{Binding Created}" />
                                <Label
                                Grid.Column="2"
                                FontSize="20"
                                HorizontalOptions="Center"
                                Text="{Binding NumOfPlayersName}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </Border>
</ContentPage>
