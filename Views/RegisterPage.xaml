<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    x:DataType="vm:RegisterPageVM"
    Title="RegisterPage"
      BackgroundColor="Black">
    <Grid  RowSpacing="50" Margin="5" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="2*,3*,*" >
        <Label  FontSize="30" HorizontalOptions="Center" Text="Register" TextColor="white"/>
        <Label Grid.Row="1" Text="{x:Static m:Strings.EnterUserName}" TextColor="white"/>
        <Entry Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" TextColor="white" Placeholder="{x:Static m:Strings.UserName}" Text="{Binding UserName}" FontSize="24"/>
        <Label  Grid.Row="2" Text="{x:Static m:Strings.EnterPassword}" TextColor="white"/>
        <Entry  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" TextColor="white"  FontSize="24" Placeholder="{x:Static m:Strings.Password}" Text="{Binding Password}" IsPassword="{Binding IsPassword}"/>
        <Button
       BackgroundColor="Transparent"
      BorderWidth="0"
      Grid.Row="2"
      Grid.Column="2"   
      Command="{Binding ToggleIsPasswordCommand}"
      FontFamily="MaterialSymbols"
      FontSize="24"
       Style="{StaticResource IconButtonStyle}"
        HorizontalOptions="End"
        Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
        TextColor="Red"
        VerticalOptions="Center" />
        <Label  Grid.Row="3" Text="{x:Static m:Strings.EnterEmail}" TextColor="white"/>
        <Entry TextColor="white" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" FontSize="24" Placeholder="{x:Static m:Strings.Email}" Text="{Binding Email}" />
        <Label  Grid.Row="4" Text="{x:Static m:Strings.EnterAge}" TextColor="white"/>
        <Entry TextColor="white"  Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" FontSize="24" Placeholder="{x:Static m:Strings.Age}" Text="{Binding Age}" />
        <Button TextColor="white" Grid.Row="5" Grid.ColumnSpan="2" Command="{Binding RegisterCommand}" Text="{x:Static m:Strings.Register}" />
        <Image   HeightRequest="200" Grid.Row="6" Source="regloginimage.png"/>
    </Grid>
</ContentPage>