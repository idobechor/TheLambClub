<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheLambClub.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:TheLambClub.Models"
    xmlns:vm="clr-namespace:TheLambClub.ViewModel"
    x:DataType="vm:RegisterPageVM"
    Title="RegisterPage"
      BackgroundColor="Black">
    <Grid Margin="50" RowDefinitions="*,*,*,*,Auto" ColumnDefinitions="3*,*"   BackgroundColor="red">
        <Entry  Placeholder="{x:Static m:Strings.UserName}" Text="{Binding UserName}" FontSize="24"/>
        <Entry Grid.Row="1" FontSize="24" Placeholder="{x:Static m:Strings.Password}" Text="{Binding Password}" IsPassword="{Binding IsPassword}"/>
        <Button
       BackgroundColor="Transparent"
      BorderWidth="0"
      Grid.Row="1"
      Grid.Column="2"   
      Command="{Binding ToggleIsPasswordCommand}"
      FontFamily="MaterialSymbols"
      FontSize="24"
       Style="{StaticResource IconButtonStyle}"
        HorizontalOptions="End"
        Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
        TextColor="Olive"
        VerticalOptions="Center" />
        <Entry Grid.Row="2" Grid.ColumnSpan="2" FontSize="24" Placeholder="{x:Static m:Strings.Email}" Text="{Binding Email}" />
        <Entry Grid.Row="3" Grid.ColumnSpan="2" FontSize="24" Placeholder="{x:Static m:Strings.Age}" Text="{Binding Age}" />
        <Button Grid.Row="4" Grid.ColumnSpan="2" Command="{Binding RegisterCommand}" Text="{x:Static m:Strings.Register}" />
    </Grid>
</ContentPage>